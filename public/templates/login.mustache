<body>
<div id="login" class="container">
	<div class="d-flex justify-content-center h-100">
		<div class="card">
			<div class="card-header">
				<h3>Authentification</h3>
			</div>
			{{#message}}<div  class="alert alert-warning">{{message}}</div>{{/message}}
			<div class="card-body">
				<form>
					<div class="input-group form-group">
						<div class="input-group-prepend">
							<span class="input-group-text"><i class="fas fa-user"></i></span>
						</div>
						<input type="text" class="form-control" placeholder="username" value="{{username}}">
					</div>
					<div class="input-group form-group">
						<div class="input-group-prepend">
							<span class="input-group-text"><i class="fas fa-key"></i></span>
						</div>
						<input type="password" class="form-control" placeholder="password" value="{{password}}">
					</div>
					<div class="row align-items-center remember">
						<!-- pas géré -->
						<input type="checkbox">Se souvenir de moi
					</div>
					<div class="form-group">
                        <input id="cancel-btn" type="button" value="Annuler" class="btn float-left bg-secondary text-white">
						<input id="login-btn" type="button" value="Login" class="btn float-right bg-primary text-white">
					</div>
				</form>
			</div>
			<div class="card-footer">
				<div class="d-flex justify-content-center links">
					<!-- pas géré -->
					Vous n'avez pas de compte ? <a href="#"> Ouvrir un compte</a>
				</div>
				<div class="d-flex justify-content-center">
					<!-- pas géré -->
					<a href="#">Mot de passe oublié ?</a>
				</div>
			</div>
		</div>
	</div>
</div>
</body>
